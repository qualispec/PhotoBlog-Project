<h1><%= @user.name %></h1>
<h2><%= @user.email %></h2>

<% if current_user == @user %>
  <%= form_for @post do |f| %>
    <%= f.label :url, "Link to Photo" %>
    <%= f.text_field :url %>
    <br>
    <%= f.label :body, "Caption" %>
    <%= f.text_field :body %>
    <%= f.submit "Add Photo" %>
  <% end %>
<% end %>
<br>

<%= render @user.posts %>